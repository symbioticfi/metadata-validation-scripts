{
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": ["network", "vault"]
        },

        "name": {
            "type": "string"
        },

        "decimals": {
            "type": "number"
        },

        "description": {
            "type": "string"
        },

        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["website", "explorer", "docs", "example", "externalLink"]
                    },

                    "name": {
                        "type": "string"
                    },

                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },

                "required": ["type", "name", "url"]
            }
        }
    },

    "required": ["type", "name", "decimals", "description", "tags", "links"]
}
